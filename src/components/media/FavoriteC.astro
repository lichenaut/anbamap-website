---
import star from "../../assets/star.png";
import starGold from "../../assets/star_gold.png";
import { Image } from "astro:assets";
---

<div
  class={`border-2 border-black border-opacity-20 size-10`}
  style="position: fixed; top: 10px; right: 10px; border-radius: 5px; z-index: 1000;"
  title="Favorites"
>
  <div class="bg-white size-9 pt-1 pl-1 pr-1" style="border-radius: 3px;">
    <button role="button" aria-label="Favorites">
      <Image
        src={starGold}
        alt="favorites icon"
        width={50}
        height={50}
        loading="eager"
      />
    </button>
  </div>
</div>
